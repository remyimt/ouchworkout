<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ouch.ouchworkout.activities.ReviewerAct">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Would you modify this exercise for the next time ?"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/review_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="last exercise"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_name">

        <TableRow
            android:layout_width="222dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set#"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/dec_setnb"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-1" />

            <EditText
                android:id="@+id/review_set"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/inc_setnb"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rep#"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/dec_repnb"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-2" />

            <EditText
                android:id="@+id/review_rep"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="000"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="211dp"
                tools:layout_editor_absoluteY="32dp" />

            <Button
                android:id="@+id/inc_repnb"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Load"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/dec_load"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-5" />

            <EditText
                android:id="@+id/review_load"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/inc_load"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+5" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Action Time"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/dec_time"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-2" />

            <EditText
                android:id="@+id/review_time"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/inc_time"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+2" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/save_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

</android.support.constraint.ConstraintLayout>
