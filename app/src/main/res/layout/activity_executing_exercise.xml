<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:parentActivityName="ouch.ouchworkout.WorkoutAct"
    tools:context="ouch.ouchworkout.activities.ExecutingExerciseAct">

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/action_light"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/rest"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="7dp" />

        <Button
            android:id="@+id/done_button"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginEnd="120dp"
            android:layout_weight="1"
            android:text="done"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="6dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/countdown"
        android:layout_width="92dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:text="000"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="50sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/exercise_img"
        android:layout_width="wrap_content"
        android:layout_height="213dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercise_name"
        app:srcCompat="@mipmap/my_logo" />

    <TextView
        android:id="@+id/exercise_name"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:text="Ouch Workout"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countdown" />

    <LinearLayout
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:gravity="top|center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercise_img">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="374dp">

            <TextView
                android:id="@+id/set_title"
                android:layout_width="14dp"
                android:layout_height="39dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="Set#"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="386dp" />

            <TextView
                android:id="@+id/set_nb"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:text="00"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                app:layout_constraintStart_toEndOf="@+id/set_title"
                tools:layout_editor_absoluteY="386dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="183dp"
                tools:layout_editor_absoluteY="374dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="39dp"
                    android:text="Rep#"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    app:layout_constraintEnd_toStartOf="@+id/after_rep_nb"
                    tools:layout_editor_absoluteY="386dp" />

                <TextView
                    android:id="@+id/rep_nb"
                    android:layout_width="40dp"
                    android:layout_height="39dp"
                    android:text="00"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    tools:layout_editor_absoluteX="237dp"
                    tools:layout_editor_absoluteY="386dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/load_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="39dp"
                    android:layout_weight="1"
                    android:text="Load"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="39dp"
                    android:layout_weight="1"
                    android:text="000"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/workout_bar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="292dp"
        android:layout_height="21dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
