<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ouch.ouchworkout.ExecutingWorkout">

    <TextView
        android:id="@+id/exercise_name"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginTop="12dp"
        android:text="Ouch Workout"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countdown" />

    <TextView
        android:id="@+id/countdown"
        android:layout_width="113dp"
        android:layout_height="83dp"
        android:layout_marginTop="16dp"
        android:text="000"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/exercise_img"
        android:layout_width="match_parent"
        android:layout_height="197dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/exercise_name"
        app:srcCompat="@mipmap/my_logo" />

    <ImageView
        android:id="@+id/action_light"
        android:layout_width="75dp"
        android:layout_height="26dp"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toRightOf="@+id/countdown"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/action" />

    <TextView
        android:id="@+id/exercise_counter"
        android:layout_width="59dp"
        android:layout_height="60dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/background_counter"
        android:gravity="center_vertical|center_horizontal"
        android:text="25"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/weigh"
        android:layout_width="253dp"
        android:layout_height="46dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercise_img">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="374dp">

            <TextView
                android:id="@+id/exercise_title"
                android:layout_width="110dp"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:text="Exercise#"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="386dp" />

            <TextView
                android:id="@+id/exercise_nb"
                android:layout_width="39dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="00"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                app:layout_constraintStart_toEndOf="@+id/exercise_title"
                tools:layout_editor_absoluteY="386dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="183dp"
            tools:layout_editor_absoluteY="374dp">

            <TextView
                android:id="@+id/rep_title"
                android:layout_width="60dp"
                android:layout_height="39dp"
                android:text="Rep#"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                app:layout_constraintEnd_toStartOf="@+id/rep_nb"
                tools:layout_editor_absoluteY="386dp" />

            <TextView
                android:id="@+id/rep_nb"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:text="00"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                tools:layout_editor_absoluteX="237dp"
                tools:layout_editor_absoluteY="386dp" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
